Q = 4;

p = [ 0 0 1 1;
      0 1 0 1];

z = [p; 1 1 1 1];
Yd = [-1  1  1 1;
      -1 -1 -1 1];

R = z*z'/Q;
H = z*Yd'/Q;
X = inv(R)*H;
W = X(1:2, :)';
b = X(3, :)';

for q = 1:Q
    e(:,q) = Yd(:, q) - (W*p(:,q) + b);
end

e


plot(p(1,1), p(2,1), 'bx', p(1,2), p(2,2), 'bx')
hold on; %axis([-0.5, 0.5, -0.5, 0.5]);
plot(p(1,3), p(2,3), 'bo', p(1,4), p(2,4), 'bo')
p1 = -1:0.01:2;
plot(p1, -b(1)/W(1,2) - W(1,1)/W(1,2)*p1, 'g')
hold on;
plot(p1)


